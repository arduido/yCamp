<% include ../partials/header %>

<div class="container">
  <header class="jumbotron">
    <div class="container">
      <h1>CAMPGROUNDS</h1>
      <p>handpicked campgrounds from around the world</p>
      <p>
        <a class="btn btn-lg btn-primary" href="/campgrounds/new">Add a New Campground</a>
      </p>
    </div>
  </header>


  <div class="container-fluid">
    <div class="row d-flex">
  <% campgrounds.forEach(function(campground){ %>
      <div class="col-sm-6 col-md-3 mt-2">
        <div class="img-thumbnail">
          <img class="img-fluid rounded" src="<%= campground.image %>">
          <div class="caption">
            <h3 class="text-center"> <%= campground.name %> </h3>
            <p class="d-flex justify-content-center"><a href="/campgrounds/<%= campground._id %>" class="btn btn-info">More Info </a></p>
          </div>
        </div>
      </div>

  <%}); %>
    </div>
  </div>
</div>
<% include ../partials/footer %>
